@model MidtermVieth.Models.LoginViewModel

@{
     Layout = "_NewLayout";
        // Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Now Logged In</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body class="text-center">
    <p>
        <h1>Login successful for:</h1>
        <h4>Username: @Model.Email</h4>
        
        @if (Model.StayLoggedIn == true) {
            @:Be sure to log out before you leave, you chose to stay logged in otherwise
        } else {
            @:You will be automaticaly logged out upon departure
        }
    </p>
    Click <a class="nav-link" asp-action="ListAccounts">here</a>
    to see account list.
</body>
</html>
